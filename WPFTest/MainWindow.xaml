<Window x:Class="WPFTest.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" ResizeMode="NoResize"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Background="{x:Null}"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:WPFTest"
        WindowStyle="None" mc:Ignorable="d" Title="MainWindow" Height="500" Width="500">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1" />
    </WindowChrome.WindowChrome>
    <Grid MouseMove="Grid_MouseMove">
        <Border x:Name="BorderOpenTK">
        </Border>
        <WrapPanel VerticalAlignment="Bottom">
            <Label Name="ticklab" />
            <Slider x:Name="SX" Minimum="-2" Maximum="2" Width="200" ValueChanged="SX_ValueChanged" />
            <Slider x:Name="SY" Minimum="-2" Maximum="2" Width="200" ValueChanged="SX_ValueChanged"/>
        </WrapPanel>
    </Grid>
</Window>
